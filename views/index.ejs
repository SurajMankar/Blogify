<%- include('partials/header.ejs') %>

    <body>

        <%- include('partials/navbar.ejs') %>

            <div class="container mt-5 pt-4">
                <div class="row">
             <% if (locals.allBlogs) { %>
                <% allBlogs.forEach(blog=> { %>
                    <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex">
                          <div class="card w-100">
                             <div class="card-body d-flex flex-column">
                                   <h1 class="card-title">
                                        <%= blog["blogTitle"] %>
                                    </h1>
                                        <p class="card-text flex-grow-1">
                                            <%= blog["blogContent"] %>
                                        </p>
                                    </div>
                                    <div class="card-footer align-self-end">
                                        <h4><i>-<%= blog["blogAuthor"] %></i></h4>
                                    </div>

                                    <div class="container mt-3">
                                        <div class="d-flex flex-wrap">
                                            <div class="col-md-6 mb-3">
                                                <form action="" method="">
                                                    <button type="submit" class="btn btn-success btn-block">Edit
                                                        Blog</button>
                                                </form>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <form action="/blog/delete/<%= blog.blogId %>" method="POST">

                                                    <button type="submit" class="btn btn-warning btn-block">Delete
                                                        Blog</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <% }); %>
                                <% } %>
                </div>
            </div>


            <script>
                function deleteBlog() {
                    document.querySelector(".delete").parentElement.parentElement.remove();
                }
            </script>



            <%- include('partials/footer.ejs') %>

    </body>

    </html>